package com.example;

public class Number {
	public static void main(String[] args) {
		int[] arr = {3,8,9,4,6,2,1,0};
		
		int min = arr[0];
		int max = arr[0];
		
		for (int i = 1; i < arr.length;i++) {
			if (arr[0] < min) {
				min = arr[i];
			}
			if(arr[0] > max) {
				max = arr[i];
			}
		}
		
		System.out.println("Smallest number: " +min);
		System.out.println("Largest number: "+max);
	}

}
